                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="cancelTransactionButton" mnemonicParsing="false" onAction="#hideAddTransactionForm" style="-fx-background-color: #666666; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25;" text="Annuler">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button fx:id="confirmTransactionButton" mnemonicParsing="false" onAction="#addNewTransaction" style="-fx-background-color: #FFA800; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25;" text="Ajouter">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>