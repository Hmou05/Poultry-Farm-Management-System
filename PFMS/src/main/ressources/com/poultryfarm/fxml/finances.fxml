                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Date" />
                        <TextField fx:id="transactionDateField" promptText="2024-11-18" style="-fx-background-color: #f8f8f8; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10; -fx-pref-height: 40;" styleClass="label" />
                    </VBox>

                    <!-- Méthode de Paiement -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Méthode de Paiement" />
                        <ComboBox fx:id="paymentMethodComboBox" style="-fx-background-color: #f8f8f8; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 5; -fx-border-color: #e0e0e0; -fx-pref-height: 40;" />
                    </VBox>
